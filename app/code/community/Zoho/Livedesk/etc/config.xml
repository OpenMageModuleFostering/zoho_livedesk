<config>
    <modules>
        <Zoho_Livedesk>
            <version>0.1.0</version>
        </Zoho_Livedesk>
    </modules>
    <global>
        <models>
            <livedesk>
                <class>Zoho_Livedesk_Model</class>
            </livedesk>
        </models>
        <blocks>
            <livedesk>
                <class>Zoho_Livedesk_Block</class>
            </livedesk>
        </blocks>
        <helpers>
            <livedesk>
                <class>Zoho_Livedesk_Helper</class>
            </livedesk>
        </helpers>
    </global>
    <frontend>
        <routers>
            <livedesk>
                <use>standard</use>
                <args>
                    <module>Zoho_Livedesk</module>
                    <frontName>livedesk</frontName>
                </args>
            </livedesk>
        </routers>
		<layout>
			<updates>
				<livedesk>
					<file>livedesk.xml</file>
				</livedesk>
			</updates>
		</layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <livedesk>
                                            <title>Zoho Livedesk Section</title>
                                        </livedesk>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <livedesk>
            <option>
                <active>1</active>
        				<enable_log>1</enable_log>
            </option>
        </livedesk>
    </default>
</config>
